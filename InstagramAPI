from instagrapi import Client

def login_to_instagram(username, password):
    api = Client()
    api.login(username, password)
    return api

def share_on_instagram(image_path, api):
    media = api.photo_upload_to_story(image_path, caption="Garanti Bankası hisse senedi tahminleri")
    print(f"Story shared with media id: {media.id}")

def main():
    # ... Veri çekme ve tahminleme kodları burada ...

    create_visualization(stock_data)
    add_text_to_image("stock_visualization.png", "Garanti Bankası hisse senedi tahminleri")

    username = "your_username"
    password = "your_password"
    api = login_to_instagram(username, password)
    share_on_instagram("stock_visualization_with_text.png", api)
